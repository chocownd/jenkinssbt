pipeline {
    agent {
        docker {
            image 'mozilla/sbt'
            args '-v $HOME/.cache:/.cache'
        }
    }
    stages {
        stage('Clean') {
            steps {
                sh 'sbt clean'
            }
        }
        stage('Compile') {
            steps {
                sh 'sbt compile'
            }
        }
    }
}
