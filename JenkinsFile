pipeline {
    agent {
        docker {
            image 'mozilla/sbt'
            args '-v $HOME/.cache:/.cache'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'sbt version'
            }
        }
        stage('Check') {
            steps {
                sh 'ls -lah /.cache'
            }
        }
    }
}
